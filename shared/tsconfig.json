{
  "compilerOptions": {
    "target": "ESNext", // Specifies the JavaScript version to compile to
    "module": "ESNext",
    "outDir": "./dist", // Output directory for compiled files
    "rootDir": "./src", // Root directory of source files
    "strict": true, // Enables strict type-checking options
    "declaration": true, // Generates .d.ts files
    "emitDeclarationOnly": false, // Only emit declaration files, no JavaScript
    "declarationMap": true, // Generates .d.ts.map files for easier debugging
    "esModuleInterop": true, // Enables interoperation between CommonJS and ES Modules
    "skipLibCheck": true, // Skips type checking of declaration files (.d.ts)
    "forceConsistentCasingInFileNames": true, // Ensures consistent casing in import paths
    "resolveJsonModule": true, // Allows importing JSON files
    "moduleResolution": "node", // Specifies module resolution strategy
    "typeRoots": ["./node_modules/@types"], // Specifies root folders for type definitions
    "types": [], // Include specific type definitions if needed
    "noEmitOnError": true // Prevents emitting files if there are type errors
  },
  "include": ["src/**/*.ts"], // Include TypeScript source files
  "exclude": ["node_modules", "**/*.test.ts"] // Exclude node_modules and test files
}
